{
  "info": {
    "name": "LibraryManagement Minimal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"username\": \"alice\",\\n  \"email\": \"alice@example.com\",\\n  \"password\": \"Password123!\"\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"username\": \"alice\",\\n  \"password\": \"Password123!\"\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Get Book Info (no auth)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/external/bookinfo/0451526538",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "external",
            "bookinfo",
            "0451526538"
          ]
        }
      }
    },
    {
      "name": "Get Logs (requires JWT)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/external/logs",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "external",
            "logs"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001"
    },
    {
      "key": "jwt",
      "value": ""
    }
  ]
}